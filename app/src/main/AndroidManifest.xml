<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appsinventiv.noorenikah">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Utils.ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VerifyPe"
        tools:replace="android:theme"
        tools:targetApi="31">
        <activity
            android:name="com.appsinventiv.noorenikah.Activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.VerifyPe.NoActionBar" >

        </activity>
        <activity
            android:name="com.appsinventiv.noorenikah.Activities.Splash"
            android:exported="true"
            android:theme="@style/Theme.VerifyPe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.appsinventiv.noorenikah.VerifyScreen" />
        <activity android:name="com.appsinventiv.noorenikah.ReportScreen" />
        <activity
            android:name=".Activities.LoginScreen"
            android:theme="@style/Theme.VerifyPe.NoActionBar" />
        <activity
            android:name=".Activities.Register"
            android:exported="true"
            android:theme="@style/Theme.VerifyPe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://recipe-app.com/recipe" -->
                <data
                    android:host="noorenikah.com"
                    android:pathPrefix="/refer"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CompleteProfileScreen"
            android:theme="@style/Theme.VerifyPe.NoActionBar" />
        <activity android:name=".Activities.SearchActivity" />
        <activity android:name=".Activities.ViewRequestProfile"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="noorenikah.com"
                    android:pathPrefix="/profile"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EditProfile" />
        <activity android:name=".Activities.ViewFriendProfile" />
        <activity android:name=".Activities.ListOfFriends" />
        <activity
            android:name=".Activities.ChatScreen"
            android:exported="true"
            android:theme="@style/Theme.VerifyPe.NoActionBar">
            <!--                        <intent-filter>-->
            <!--                            <action android:name="android.intent.action.MAIN" />-->

            <!--                            <category android:name="android.intent.category.LAUNCHER" />-->
            <!--                        </intent-filter>-->
        </activity>
        <activity android:name=".Activities.VerifyPhone" />
        <activity android:name=".Activities.PaymentProof" />
        <activity android:name=".Activities.PaymentsHistory" />
        <activity
            android:name=".Activities.InviteHistory"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Activities.PaymentActivity" />
        <activity android:name=".Activities.NotificationHistory" />
        <activity android:name=".Activities.SearchScreen" />
        <activity
            android:name=".Activities.ViewPictures"
            android:theme="@style/Theme.VerifyPe.NoActionBar" />
        <activity
            android:name=".Activities.ViewSelectedPicture"
            android:theme="@style/Theme.VerifyPe.NoActionBar" />
        <activity android:name=".Activities.Comments.CommentsActivity" />
        <activity
            android:name=".Activities.UseThis"
            android:exported="true">

        </activity>
        <activity android:name=".Activities.MatchMaker.RegisterMatchMaker" />
        <activity android:name=".Activities.MatchMaker.MatchMakerProfile" />
        <activity android:name=".Activities.MatchMaker.CreateProfile" />
        <activity android:name=".Activities.UploadProfilePicture" />
        <activity android:name=".Activities.Posts.AddPost" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8337731531668373~1592325564" />

        <service
            android:name=".Utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>