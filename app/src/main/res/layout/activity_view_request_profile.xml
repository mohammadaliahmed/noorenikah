<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/picked"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="1dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="Personal Information"

            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/black_border"

                android:gravity="left|center"
                android:padding="5dp"
                android:text="Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"

                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"

                android:layout_weight="1"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="City"
                android:textColor="#000" />

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"

                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/black_border"

                android:gravity="left|center"
                android:padding="5dp"
                android:text="Marital Status"
                android:textColor="#000" />

            <TextView
                android:id="@+id/maritalStatus"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/black_border"

                android:gravity="left|center"
                android:padding="5dp"
                android:text="Education"
                android:textColor="#000" />

            <TextView
                android:id="@+id/education"
                android:layout_width="0dp"

                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="Cast"
                android:textColor="#000" />

            <TextView
                android:id="@+id/cast"
                android:layout_width="0dp"

                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="Job/Business"
                android:textColor="#000" />

            <TextView
                android:id="@+id/jobOrBusiness"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="About"
                android:textColor="#000" />

            <TextView
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/black_border"
                android:gravity="left|center"
                android:lines="2"
                android:padding="5dp"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@drawable/btn_bg"
            android:inputType="textCapSentences"
            android:text="Send Request"
            android:textColor="#fff" />

        <Button
            android:id="@+id/requestSent"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:background="@drawable/btn_bg_blue_curved"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text="Request Sent"
            android:textColor="#034EC1"
            android:visibility="gone" />

        <Button
            android:id="@+id/friend"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btn_bg_green"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text="Friend"
            android:textColor="#fff"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Posts Shared"
            android:textColor="#000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>


