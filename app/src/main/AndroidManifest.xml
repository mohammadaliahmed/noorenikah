<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appsinventiv.noorenikah">

    <application
        android:allowBackup="true"
        tools:replace="android:theme"
        android:name=".Utils.ApplicationClass"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VerifyPe"
        tools:targetApi="31">
        <activity
            android:name="com.appsinventiv.noorenikah.Activities.MainActivity"
            android:theme="@style/Theme.VerifyPe.NoActionBar"
            android:exported="true"/>
        <activity
            android:theme="@style/Theme.VerifyPe.NoActionBar"
            android:name="com.appsinventiv.noorenikah.Activities.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.appsinventiv.noorenikah.VerifyScreen" />
        <activity android:name="com.appsinventiv.noorenikah.ReportScreen" />
        <activity android:name="com.appsinventiv.noorenikah.LatestFrauds" />
        <activity android:name="com.appsinventiv.noorenikah.ContactUs" />
        <activity android:name=".Activities.LoginScreen"
            android:theme="@style/Theme.VerifyPe.NoActionBar"/>
        <activity android:name=".Activities.Register"
            android:exported="true"
            android:theme="@style/Theme.VerifyPe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://recipe-app.com/recipe" -->
                <data
                    android:host="noorenikah.com"
                    android:pathPrefix="/refer"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CompleteProfileScreen"
            android:theme="@style/Theme.VerifyPe.NoActionBar"/>
        <activity android:name=".Activities.SearchActivity" />
        <activity android:name=".Activities.ViewRequestProfile" />
        <activity android:name=".Activities.EditProfile" />
        <activity android:name=".Activities.ViewFriendProfile" />
        <activity android:name=".Activities.ListOfFriends" />
        <activity android:name=".Activities.ChatScreen"
            android:theme="@style/Theme.VerifyPe.NoActionBar"/>
        <activity android:name=".Activities.VerifyPhone" />
        <activity android:name=".Activities.PaymentProof" />
        <activity android:name=".Activities.PaymentsHistory" />
        <activity android:name=".Activities.InviteHistory"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".Activities.PaymentActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5349923547931941~1242986914" />

        <service android:name=".Utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>