<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/picked" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:padding="5dp"

        android:text="Personal Information"
        android:textColor="#000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="#000"

            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Name" />

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"

            android:layout_height="30dp"
            android:id="@+id/name"
            android:layout_weight="2"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"

            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Age" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/age"
            android:layout_weight="2"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:textColor="#000"

            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"

            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="City" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="#000"
            android:id="@+id/city"

            android:layout_weight="2"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="#000"

            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Marital Status" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:textColor="#000"
            android:id="@+id/maritalStatus"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="#000"

            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Education" />

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"

            android:layout_height="30dp"
            android:layout_weight="2"
            android:id="@+id/education"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Cast" />

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"

            android:layout_height="30dp"
            android:id="@+id/cast"
            android:layout_weight="2"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="#000"

            android:layout_weight="1"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Job/Business" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/jobOrBusiness"
            android:textColor="#000"
            android:layout_weight="2"
            android:background="@drawable/black_border"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>


</LinearLayout>